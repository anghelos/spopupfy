{
    "name": "Spopupfy",
    "manifest_version": 2,
    "description": "A simple mini player popup window for the Spotify web player.",
    "version": "0.5.2",
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg",
        "128": "icon.svg"
    },
    "homepage_url": "https://github.com/anghelos/spopupfy",
    "developer": {
        "name": "Anghelos Coulon",
        "url": "https://github.com/anghelos/spopupfy"
      },
    "content_scripts": [
        {
            "matches": [
                "*://open.spotify.com/*"
            ],
            "js": [
                "spopupfy.js"
            ],
            "css": [
                "spopupfy.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "storage"
    ]
}